@model AzureStorageLibrary.Model.Product
<h2>Add Product</h2>

<form class="form-inline" asp-action="@(ViewBag.isUpdate ? "Update" : "Create")" method="post" enctype="application/x-www-form-urlencoded">

    <input class="form-control mr-1" asp-for="Name" placeholder="Product Name" />
    <input class="form-control mr-1" asp-for="Price" placeholder="Product Price" />
    <input class="form-control mr-1" asp-for="Stock" placeholder="Product Stock" />
    <input class="form-control mr-1" asp-for="Color" placeholder="Product Color" />

    <input type="hidden" asp-for="RowKey" />
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="ETag" />
    <input class="btn-primary" type="submit" value="@(ViewBag.isUpdate ? "Product Update" : " Product Create")"/>
</form>


<h2>Product</h2>
<table class="table table-bordered">
    <tr>
        <th>RowKey</th>
        <th>PartitionKey</th>
        <th>Name</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Color</th>
        <th>TimeStamp</th>
    </tr>
    @foreach (var item in ViewBag.products as List<AzureStorageLibrary.Model.Product>)
    {
        <tr>
            <td>@item.RowKey</td>
            <td>@item.PartitionKey</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td>@item.Color</td>
            <td>@item.Timestamp</td>
            <td>
            <a class="btn btn-success" asp-action="Update" asp-controller="TableStorages" asp-route-rowKey="@item.RowKey" 
                asp-route-partitionKey="@item.PartitionKey">Update</a>
            </td>
        </tr>
    }
</table>


